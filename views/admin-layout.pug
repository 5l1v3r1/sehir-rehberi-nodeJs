        script(src='/admin/vendor/retina-replace.min.js')
        script(src='/admin/vendor/jquery.magnific-popup.min.js')
        // Custom scripts for all pages
        script(src='/admin/js/admin.js')
        // Custom scripts for this page
        script(src='/admin/vendor/dropzone.min.js')
        script(src='/admin/vendor/bootstrap-datepicker.js')
        script.
            $('input.date-pick').datepicker();
        // WYSIWYG Editor
        script(src='/admin/js/editor/summernote-bs4.min.js')
        script.
            $('.editor').summernote({
                fontSizes: ['10', '14'],
                toolbar: [
                    // [groupName, [list of button]]
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough']],
                    ['fontsize', ['fontsize']],
                    ['para', ['ul', 'ol', 'paragraph']]
                ],
                placeholder: 'Write here ....',
                tabsize: 2,
                height: 200
            });


