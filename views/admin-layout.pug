        script(src='/admin/vendor/jquery/jquery.min.js')
        script(src='/admin/vendor/bootstrap/js/bootstrap.bundle.min.js')
        // Core plugin JavaScript
        script(src='/admin/vendor/jquery-easing/jquery.easing.min.js')
        // Page level plugin JavaScript
        script(src='/admin/vendor/chart.js/Chart.min.js')
        script(src='/admin/vendor/datatables/jquery.dataTables.js')
        script(src='/admin/vendor/datatables/dataTables.bootstrap4.js')
